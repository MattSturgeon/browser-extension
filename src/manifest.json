{
  "manifest_version": 3,
  "name": "Mergify",
  "version": "1.0.0",
  "description": "Mergify extension for GitHub",
  "icons": {
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "js": [
        "mergify.js"
      ],
      "matches": [
        "https://github.com/*"
      ]
    }
  ]
}
